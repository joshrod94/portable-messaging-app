{
  "name": "portable-messaging-app",
  "version": "1.0.0",
  "description": "Portable Desktop App for Google Messages",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Josh Rodriguez / joshrod94",
  "license": "MIT",
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^26.0.11"
  },
  "dependencies": {
    "electron-store": "8.1.0",
    "sound-play": "^1.1.0"
  },
  "build": {
    "appId": "com.joshrod94.portable-messaging-app",
    "productName": "Portable Messaging App",
    "copyright": "Copyright Â© 2025 Josh Rodriguez",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*"
    ],
    "asar": false,
    "asarUnpack": [
      "src/assets/*.mp3",
      "node_modules/electron-store/**/*",
      "node_modules/sound-play/**/*",
      "src/titlebar/**/*"
    ],
    "extraResources": [
      {
        "from": "src/assets/",
        "to": "assets",
        "filter": [
          "*.ico",
          "*.mp3"
        ]
      }
    ],
    "win": {
      "artifactName": "Portable Messaging App.${ext}",
      "icon": "src/assets/Messenger_256.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
